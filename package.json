{
  "name": "arcacon_selector",
  "version": "0.1.0",
  "description": "My Chrome Extension",
  "private": true,
  "scripts": {
    "watch": "webpack --mode=development --watch --config config/webpack.config.js",
    "build": "webpack --mode=production --config config/webpack.config.js",
    "pack": "node pack.js",
    "repack": "npm run build && npm run pack",
    "format": "prettier --write --ignore-unknown \"{config,public,src}/**/*.{html,css,js,ts,json}\""
  },
  "devDependencies": {
    "@types/chrome": "^0.1.27",
    "adm-zip": "^0.5.16",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.11.0",
    "file-loader": "^6.2.0",
    "mini-css-extract-plugin": "^2.9.4",
    "prettier": "^2.8.8",
    "ts-loader": "^9.5.4",
    "webpack": "^5.102.1",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.10.0"
  },
  "dependencies": {
    "@shoelace-style/shoelace": "^2.20.1",
    "@uppy/core": "^5.1.1",
    "@uppy/dashboard": "^5.0.4",
    "@uppy/drag-drop": "^5.0.2",
    "@uppy/locales": "^5.0.1",
    "dexie": "^4.2.1",
    "fuse.js": "^7.1.0",
    "glob": "^11.0.3",
    "jszip": "^3.10.1",
    "path": "^0.12.7",
    "scrollspy-js": "^0.1.3",
    "typescript": "^5.9.3"
  }
}
