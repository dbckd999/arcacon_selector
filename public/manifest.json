{
  "manifest_version": 3,
  "name": "Arcacon_selector",
  "version": "1.0",
  "description": "My Chrome Extension",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_title": "Arcacon_selector"
  },
  "permissions": ["tabs", "storage", "identity", "sidePanel"],
  "host_permissions": [
    "https://auth.dbckd999.xyz/*",
    "https://api.dbckd999.xyz/*",
    "https://ac-p1.namu.la/"
  ],
  "content_scripts": [
    {
      "matches": ["https://arca.live/b/*/*"],
      "js": ["board-content-script.js"]
    },
    {
      "matches": ["https://arca.live/e/*"],
      "css": ["sale-content-script.css"],
      "js": ["sale-content-script.js"]
    },
    {
      "matches": ["https://arca.live/settings/emoticons"],
      "js": ["order-content-script.js"]
    }
  ]
}